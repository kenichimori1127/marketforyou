<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">スタッフ情報入力</h2>
        <%= form_with model: @staff, url: staff_registration_path, local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, class: :form__text, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %><br />
          <%= f.password_field :password, class: :form__text, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, class: :form__text, autocomplete: "password-confirmation" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: :form__text, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "スタッフ登録", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>
