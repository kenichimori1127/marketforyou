<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">会員情報入力</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, class: :form__text, autofocus: true, placeholder:"例) yamada" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %><br />
          <%= f.password_field :password, class: :form__text, placeholder:"例) 半角英数字", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, class: :form__text, placeholder:"例) 同じパスワードを入力" ,autocomplete: "password-confirmation" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: :form__text, placeholder:"例) PC・携帯どちらでも可", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "お名前(全角)" %><br />
          <%= f.text_area :family_name, class: :form__text, placeholder:"例) 山田" %>
          <%= f.text_area :first_name, class: :form__text, placeholder:"例) 太郎" %>
        </div>

        <div class="field">
          <%= f.label :family_name, "お名前カナ(全角)" %><br />
          <%= f.text_area :family_name_kana, class: :form__text, placeholder:"例) ヤマダ" %>
          <%= f.text_area :first_name_kana, class: :form__text, placeholder:"例) タロウ" %>
        </div>

        <div class="field">
          <%= f.label :phone_number, "電話番号" %><br />
          <%= f.text_area :phone_number, class: :form__text, placeholder:"例) 09012345678", maxlength:"11" %>
        </div>

        <div class="actions">
          <%= f.submit "会員登録", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>
